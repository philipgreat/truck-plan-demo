<root org="doublechain"
    chinese_name="RPA机器人控制中心"
	cfg_view_scope="false"
    english_name="ChainLogic"
    _login_bg="https://demo.doublechaintech.com/demodata/imageManager/loadImage/chainlogic0000/400/300/red/"
    _home_bg="https://demo.doublechaintech.com/demodata/imageManager/loadImage/chainlogic0000/400/300/red/"
>
    
    <platform
        name="RPA机器人控制中心"
        founded="now()"
    />

	<change_request_type
		name="登记机器人|注册流程|启动流程|注销机器人|注销流程"
		code="DEPOSITE|TRANSFER|WITHDRAW|WITHDRAW2|WITHDRAW3|[1,99]"
		icon="download|swap|upload|account-book|edit"
		display_order="1|2|3|4|5|6"
		bind_types="text()"
		step_configuration="text()"
		platform="$(platform)"
		_features="cr_type"
		_identified_by="code"
		
	/>
	
	
	
	<!-- PENDING ACTION FROM WHOM -->
    
	<change_request
		name="存款|转账|取款|[1,50]"
		
		create_time="createTime()"
		remote_ip="remoteIp()"
		request_type="$(change_request_type)"
		platform="$(platform)"
		_vg4platform="变更"
		_features="change_request"
	/>




	<robot_status 
		name="空闲|启动中|忙"
		code="IDLE|STARTING|BUSY"
		_features="status"
		platform="platform()"

		
	/>
	<task_status 
		name="启动|正在执行|完成|错误终止"
		code="IDLE|STARTING|BUSY|ERROR"
		_features="status"
		platform="platform()"

		
	/>
	<workflow_type 
	
		name="自动流程|手动流程|其他流程"
		code="AUTO|MANUAL|OTHER"
		_features="status"
		platform="platform()"

	/>
	<work_card
		name="工作卡"

		platform="platform()"
		_vg4platform="业务门户"

	/>
	<robot 
		name="RPA机器人一号" 
		supplier="天机RPA"
		model="XM-009912"
		version="1.01|1.02"
		status="robot_status()"
		_vg4platform="流程自动化" 
		platform="platform()"
	/>

	<workflow 
		name="工作流" 
		start_parameters="a b c c|e g f"
		workflow_type="workflow_type()"
		script_text="text()"
		_vg4platform="业务中心" 
		platform="platform()"
	/>
	
	<task 
		name="机器人执行任务" 
		retry_total_count="100"
		retry_remain="10"
		robot="robot()"
		status="task_status()"
		workflow="workflow()"
		start_time="createTime()"
		last_retry_time="createTime()"
		end_time="createTime()"
		platform="platform()"
		_vg4platform="业务中心"
	/>






</root>